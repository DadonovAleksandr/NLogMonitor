# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must use LF
*.sh text eol=lf

# Windows batch files must use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Source code
*.cs text diff=csharp
*.ts text
*.tsx text
*.js text
*.jsx text
*.vue text
*.json text
*.xml text
*.html text
*.css text
*.scss text

# Configuration
*.yml text
*.yaml text
*.md text
*.txt text

# Prevent accidental conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
