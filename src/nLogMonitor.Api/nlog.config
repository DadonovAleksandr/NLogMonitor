<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="${basedir}/logs/internal-nlog-log.txt">

  <variable name="logLevel" value="Info" />

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File" name="logfile" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${message}|${logger}|${processid}|${threadid}" />
    <target xsi:type="Console" name="logconsole"
            layout="${longdate}|${level:uppercase=true}|${message}|${logger}|${processid}|${threadid}" />
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="*" minlevel="${var:logLevel}" writeTo="logfile" />
    <logger name="*" minlevel="Trace" writeTo="logconsole">
      <filters>
        <when condition="contains('${basedir}', 'bin\Debug')" action="Log"/>
      </filters>
    </logger>
  </rules>
</nlog>
